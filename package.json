{
  "name": "graphql-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for graphQL with JEST and Hot Reload webpack",
  "main": "src/index.js",
  "author": "Michele Giardi",
  "license": "MIT",
  "scripts": {
    "dev": "rm -rf ./dist && webpack --config webpack.config.js",
    "build:prod": "rm -rf ./dist && webpack --config webpack.prod.config.js",
    "start": "rm -rf ./dist && webpack --config webpack.prod.config.js && node dist/server.js",
    "test": "jest",
    "lint": "eslint src"
  },
  "dependencies": {
    "apollo-server-express": "^1.2.0",
    "body-parser": "^1.18.2",
    "express": "^4.16.2",
    "graphql": "^0.10.3",
    "graphql-tag": "^2.5.0",
    "graphql-tools": "^2.6.1",
    "merge-graphql-schemas": "^1.3.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.0.1",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.7.0",
    "eslint": "^4.10.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.2.0",
    "jest": "^24.8.0",
    "start-server-webpack-plugin": "^2.2.0",
    "webpack": "^3.8.1",
    "webpack-node-externals": "^1.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Miki79/graphql-boilerplate.git"
  }
}
